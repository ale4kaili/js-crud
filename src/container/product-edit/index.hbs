{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>
    {{#with product}}
    <section>
      <div class="form row">
          <h1 class="form__title">Редагування товару</h1>
          <form method="POST" action="/product-edit">
              <div class="form__content">
                  <div class="form__card shadow p-3 mb-4 bg-body rounded">
                      <h3 class="form__card__title">Інформація про товар</h3>
                      <div class="field__block">
                        <div class="form__field">
                            <label for="name" class="form__label">Назва товару</label>
                            <input type="name" name="name" class="form__input">
                        </div>
                        <div class="form__field">
                            <label for="price" class="form__label">Ціна</label>
                            <input type="price" name="price" class="form__input">
                        </div>
                        <div class="form__field">
                            <label for="id" class="form__label">ID</label>
                            <input type="id" name="id" class="form__input" value="{{id}}">
                        </div>
                      </div>
                      <div class="form__field">
                          <label for="description" class="form__label">Короткий опис товару</label>
                          <input type="description" name="description" class="form__input">
                      </div>
                      <div class="desc__hint">Відображається у картці товару</div>
                      <div class="button__block col-2">
                        <button class="form__button__save form__button">Зберегти оновлення</button>
                        <a href="/product-delete?id={{id}}" class="form__button__delete form__button">Видалити товар</a>
                      </div>
                  </div>
              </div>
          </form>
      </div>
    </section>
    {{/with}}
</main>

